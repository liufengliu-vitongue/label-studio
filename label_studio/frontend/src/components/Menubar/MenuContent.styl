.content-wrapper
  display flex
  min-height 100vh
  flex-direction column
  background linear-gradient(45deg, #a5ce78 0%, #0c746a 85%) no-repeat

  &__body
    flex 1
    display flex
    margin 0 5px 5px
    min-width calc(100% - 10px)
    min-height calc(100% - 5px)
    flex-direction column
    max-height calc(100vh - var(--header-height) - 10px)

  &__content
    flex 1
    display flex
    flex-direction column
    margin-left 0
    height 100%
    background var(--bg-color)
    backdrop-filter blur(12px)
    border-radius 24px
    transition margin var(--menu-animation-duration) var(--menu-animation-curve)
    will-change margin-left
    border-radius 24px

    &_withSidebar
      margin-left var(--menu-sidebar-width)
      border-top-left-radius 0
      border-bottom-left-radius 0
